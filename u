<input accesskey="s" type="submit" id="save" name="save" value="[[save]]" /> .
<a accesskey="c" href="[[PAGE]].html">[[cancel]]</a> .
<a accesskey="i" href="[[INDEX_PAGE]].html">[[index]]</a>
<br />
[[file_upload]] <input accesskey="f" type="file" id="file" name="file" />
</div>
</form>
</div>
[[FOOTER]]
EOT_UNIQKI
}

